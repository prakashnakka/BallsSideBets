@using BL.Models
@model ICollection<PlayerPick>
@{
    ViewData["Title"] = "Pick History";
}

    <h1>My History</h1> 

<div class="bootstrap-data-table-panel">
    <div style="overflow-x:auto;">
        @if (Model.Count() > 0)
        {

            <table id="row-select" class="display table table-hover">
                <thead>
                    <tr>
                        <th>Team Pick</th>
                        <th>Target Score</th>
                        <th>First Inning Wickets</th>
                        <th>Chasing Wickets</th>
                        <th>Overs to chase</th>
                        <th>Highest Score</th>
                        <th>Highest Wickets</th>
                        <th>Total 4's</th>
                        <th>Total 6's</th>
                        <th>Added Date</th>
                    </tr>
                </thead>

                <tbody class="purple">
                    @foreach (PlayerPick item in Model)
                    {
                    <tr>
                        <td>@item.TeamPick</td>
                        <td>@item.CombinedScore</td>
                        <td>@item.FirstInningWickets</td>
                        <td>@item.SecondInningWickets</td>
                        <td>@item.OversChase</td>
                        <td>@item.HighestScore</td>
                        <td>@item.HighestWickets</td>
                        <td>@item.Total4s</td>
                        <td>@item.Total6s</td>
                        <td>@item.AddDt</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center">
                <h4 class="text-dark" style="padding-top: 30px;">
                    No records found. Add your picks to get started!
                </h4>
                <p style="padding-top: 20px;">
                    <a href="~/picks/add" class="btn btn-primary">Add Picks</a>
                </p>
            </div>
        }
    </div>
</div>