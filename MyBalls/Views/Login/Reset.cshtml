@using  BL.Models
@model ChangePassword
@{
    Layout = "_loginlayout";
    ViewData["Title"] = "Reset Password";
}


@section Title{
    Reset Password
}

    <div class="form-validation">
        @using (Html.BeginForm("Reset", "users", FormMethod.Post, new { @class = "form-reset" }))
        {
            @Html.AntiForgeryToken()
            @if (this.TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <span>@this.TempData["Error"]</span>
                </div>
            }

            @Html.TextBoxFor(m => m.Email, new { Name = "Email", id = "Email", @class = "border p-3 w-100 my-2", @placeholder = "Email *" })

            @Html.PasswordFor(m => m.NewPassword, new { Name = "NewPassword", id = "NewPassword", @class = "border p-3 w-100 my-2", @placeholder = "Password *" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { Name = "ConfirmPassword", id = "ConfirmPassword", @class = "border p-3 w-100 my-2", @placeholder = "Password *" })

            <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Reset Password</button>
            <a class="mt-3 d-block  text-primary" href="~/users/login">Log In</a>
        }
    </div>
