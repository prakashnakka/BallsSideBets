@using  BL.Models
@model UserAccount
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "login";
}

@section Title{ 
    Login Now
}

<div class="form-validation">
    @using (Html.BeginForm("login", "users", FormMethod.Post, new { @class = "form-sign-in" }))
    {
        @Html.AntiForgeryToken()
        @if (this.TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <div class="col-xl-8">
                    <span>@this.TempData["Error"]</span>
                </div>
            </div>
        }


        @Html.TextBoxFor(m => m.Email, new { Name = "Email", id = "Email", @class = "border p-3 w-100 my-2", @placeholder = "Email *" })
        @Html.PasswordFor(m => m.Pwd, new { Name = "Pwd", id = "Password", @class = "border p-3 w-100 my-2", @placeholder = "Password *" })

        <div class="loggedin-forgot">
            <input type="checkbox" id="keep-me-logged-in">
            <label for="keep-me-logged-in" class="pt-3 pb-2">Keep me logged in</label>
        </div>

        <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Log in</button>
        <a class="mt-3 d-block  text-primary" href="~/users/reset">Forget Password?</a>
        <span>New to site?</span> <a class="mt-3 d-inline-block text-primary" href="~/users/register">Register Now</a>


    }
</div>