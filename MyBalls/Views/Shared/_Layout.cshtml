<!DOCTYPE html>
<html lang="en">
<head>

    <!-- SITE TITTLE -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - SideBalls</title>

    <!-- FAVICON -->
    <link href="img/favicon.png" rel="shortcut icon">
    <!-- PLUGINS CSS STYLE -->
    <!-- <link href="plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet"> -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/classimax/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/classimax/plugins/bootstrap/css/bootstrap-slider.css">
    <!-- Font Awesome -->
    <link href="~/classimax/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Owl Carousel -->
    @*<link href="~/classimax/plugins/slick-carousel/slick/slick.css" rel="stylesheet">
        <link href="~/classimax/plugins/slick-carousel/slick/slick-theme.css" rel="stylesheet">*@
    <!-- Fancy Box -->
    @*<link href="plugins/fancybox/jquery.fancybox.pack.css" rel="stylesheet">
        <link href="plugins/jquery-nice-select/css/nice-select.css" rel="stylesheet">*@
    <!-- CUSTOM CSS -->
    <link href="~/classimax/css/style.css" rel="stylesheet">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body class="body-wrapper">


    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar navbar-expand-lg navbar-light navigation">
                        <a class="navbar-brand" href="index.html">
                            <img src="~/classimax/images/logo.jpg" alt="">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto main-nav ">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="~/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Rules">Rules</a>
                                </li>
                                <li class="nav-item dropdown dropdown-slide">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Picks <span><i class="fa fa-angle-down"></i></span>
                                    </a>
                                    <!-- Dropdown list -->
                                    <div class="dropdown-menu">
                                        @if (this.ViewBag.HasGameStarted != null && this.ViewBag.HasGameStarted)
                                        {
                                            <a class="dropdown-item" asp-area="" asp-controller="Picks" asp-action="allpicks">All Player Picks</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="Picks" asp-action="results">Results</a>
                                        }
                                        else
                                        {
                                            <a class="dropdown-item" asp-area="" asp-controller="Picks" asp-action="add">Add Picks</a>
                                        }
                                        <a class="dropdown-item" asp-area="" asp-controller="Picks" asp-action="history">My Pick History</a>
                                    </div>
                                </li>
                                @if (this.ViewBag.IsAdmin != null && this.ViewBag.IsAdmin)
                                {
                                    <li class="nav-item dropdown dropdown-slide">
                                        <a class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" href="">
                                            Admin<span><i class="fa fa-angle-down"></i></span>
                                        </a>

                                        <!-- Dropdown list -->
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="AddResults">Add Actuals</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="PlayerManagement">Players List</a>
                                        </div>
                                    </li>
                                }
                            </ul>
                            <ul class="navbar-nav ml-auto mt-10">
                                @if (this.ViewBag.IsLoggedIn != null && this.ViewBag.IsLoggedIn)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action=""><i class="fa fa-user-circle"></i> @this.ViewBag.Email</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white add-button" asp-area="" asp-controller="Users" asp-action="Sign_out">Logout</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white add-button" asp-area="" asp-controller="Users" asp-action="login">Login</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <section class="page-title">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2 text-center">
                    <!-- Title text -->
                    <h3>
                        @RenderSection("Title", false)
                    </h3>
                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>

    <!--============================
    =            Footer            =
    =============================-->
    <!-- Footer Bottom -->
    <footer class="footer-bottom">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-12">
                    <!-- Copyright -->
                    <div class="copyright">
                        <p>
                            Copyright ©
                            <script>
                                var CurrentYear = new Date().getFullYear()
                                document.write(CurrentYear)
                            </script>. All Rights Reserved, Chemicos2K 'Originals'
                        </p>
                    </div>
                </div>
                <div class="col-sm-6 col-12">
                    <!-- Social Icons -->
                    <ul class="social-media-icons text-right">
                        <li><a class="fa fa-facebook" href="https://www.facebook.com/" target="_blank"></a></li>
                        <li><a class="fa fa-twitter" href="https://www.twitter.com/" target="_blank"></a></li>
                        <li><a class="fa fa-pinterest-p" href="https://www.pinterest.com/" target="_blank"></a></li>
                        <li><a class="fa fa-vimeo" href=""></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Container End -->
        <!-- To Top -->
        <div class="top-to">
            <a id="top" class="" href="#"><i class="fa fa-angle-up"></i></a>
        </div>
    </footer>

    <!-- JAVASCRIPTS -->
    <script src="~/classimax/plugins/jQuery/jquery.min.js"></script>
    <script src="~/classimax/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/classimax/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/classimax/plugins/bootstrap/js/bootstrap-slider.js"></script>
    <!-- tether js -->
    <script src="~/classimax/plugins/tether/js/tether.min.js"></script>
    <script src="~/classimax/plugins/raty/jquery.raty-fa.js"></script>
    <script src="~/classimax/plugins/slick-carousel/slick/slick.min.js"></script>
    <script src="~/classimax/plugins/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/classimax/plugins/fancybox/jquery.fancybox.pack.js"></script>
    <script src="~/classimax/plugins/smoothscroll/SmoothScroll.min.js"></script>
    <!-- google map -->
    @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcABaamniA6OL5YvYSpB3pFMNrXwXnLwU&libraries=places"></script>
        <script src="~/classimax/plugins/google-map/gmap.js"></script>*@
    <script src="~/classimax/js/script.js"></script>

</body>

</html>